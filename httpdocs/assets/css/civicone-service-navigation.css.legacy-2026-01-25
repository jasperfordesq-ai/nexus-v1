/* ============================================
   Service Navigation Base Layout
   ============================================ */

.govuk-service-navigation {
    background-color: #f0f4f5;
    color: var(--color-govuk-black, #0b0c0c);
    border-bottom: 1px solid var(--color-gray-400, #b1b4b6);
}

.govuk-service-navigation .govuk-width-container {
    padding-left: var(--space-4, 16px);
    padding-right: var(--space-4, 16px);
}

.govuk-service-navigation__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0;
    gap: var(--space-4, 16px);
}

.govuk-service-navigation__service-name {
    flex-shrink: 0;
}

.govuk-service-navigation__service-name .govuk-service-navigation__link {
    display: inline-block;
    padding: 15px 0;
    font-weight: 700;
    font-size: 1.1875rem;
    line-height: 1.526;
    color: var(--color-govuk-black, #0b0c0c);
    text-decoration: none;
    white-space: nowrap;
}

.govuk-service-navigation__service-name .govuk-service-navigation__link:hover {
    text-decoration: underline;
}

.govuk-service-navigation__wrapper {
    flex: 1;
    overflow: visible;
}

.govuk-service-navigation__list {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin: 0;
    padding: 0;
    list-style: none;
    gap: 0;
}

.govuk-service-navigation__item {
    position: relative;
    margin: 0;
    padding: 0;
}

.govuk-service-navigation__item:not(:last-child) {
    margin-right: 30px;
}

.govuk-service-navigation__link {
    display: inline-block;
    padding: 15px 0;
    color: #144e81;
    text-decoration: none;
    font-size: 1.1875rem;
    line-height: 1.526;
    font-weight: 400;
    border-bottom: 5px solid transparent;
    transition: border-color 0.15s ease-in-out;
    white-space: nowrap;
}

.govuk-service-navigation__link:hover {
    border-bottom-color: var(--color-gray-600, #505a5f);
    text-decoration: none;
}

.govuk-service-navigation__link:focus {
    outline: 3px solid var(--color-focus, #ffdd00);
    outline-offset: 0;
    background-color: var(--color-focus, #ffdd00);
    color: var(--color-govuk-black, #0b0c0c);
    text-decoration: none;
}

.govuk-service-navigation__item--active .govuk-service-navigation__link,
.govuk-service-navigation__link[aria-current="page"] {
    border-bottom-color: #144e81;
    border-bottom-width: 5px;
    font-weight: 700;
}

/* More button with chevron */
.govuk-service-navigation__link--more {
    display: flex;
    align-items: center;
    gap: 6px;
}

/* ============================================
   Enhanced Dropdown Panel
   ============================================ */

/* CRITICAL: Hide dropdown by default */
.govuk-service-navigation__dropdown {
    display: none;
}

/* Show dropdown when toggle button is expanded */
.govuk-service-navigation__link--more[aria-expanded="true"] + .govuk-service-navigation__dropdown,
.govuk-service-navigation__dropdown:not([hidden]) {
    display: block;
}

/* Ensure hidden attribute works */
.govuk-service-navigation__dropdown[hidden] {
    display: none !important;
}

/* Dropdown positioning and sizing - GOV.UK standard */
.govuk-service-navigation__dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    z-index: 1000;
    margin-top: 0;
    min-width: 480px;
    max-width: 640px;
    background: var(--color-white, #ffffff);
    border: 1px solid var(--color-gray-400, #b1b4b6);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    padding: var(--space-4, 16px);
}

/* Categorized dropdown grid layout */
.civicone-nav-dropdown-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-5, 20px) var(--space-6, 24px);
}

/* Individual category section */
.civicone-nav-dropdown-section {
    min-width: 0;
}

/* Category heading - WCAG compliant (proper semantic heading) */
.civicone-nav-dropdown-heading {
    margin: 0 0 var(--space-2, 8px) 0;
    padding: 0 0 var(--space-2, 8px) 0;
    font-size: 0.9375rem;
    font-weight: 700;
    color: var(--color-gray-600, #505a5f);
    border-bottom: 2px solid var(--color-gray-300, #dfe3e6);
    text-transform: none;
}

/* Category list */
.civicone-nav-dropdown-list {
    margin: 0;
    padding: 0;
    list-style: none;
}

.civicone-nav-dropdown-item {
    margin: 0;
    padding: 0;
}

/* Dropdown links - GOV.UK compliant */
.govuk-service-navigation__dropdown-link {
    display: block;
    padding: var(--space-2, 8px) 0;
    color: var(--color-govuk-link, #1d70b8);
    text-decoration: underline;
    font-size: 0.9375rem;
    line-height: 1.4;
}

.govuk-service-navigation__dropdown-link:hover {
    color: var(--color-govuk-link-hover, #003078);
    text-decoration-thickness: 3px;
}

.govuk-service-navigation__dropdown-link:focus {
    outline: 3px solid transparent;
    color: var(--color-govuk-black, #0b0c0c);
    background-color: var(--color-focus, #ffdd00);
    box-shadow: 0 -2px var(--color-focus, #ffdd00), 0 4px var(--color-govuk-black, #0b0c0c);
    text-decoration: none;
}

.govuk-service-navigation__dropdown-link[aria-current="page"] {
    font-weight: 700;
    color: var(--color-govuk-black, #0b0c0c);
    text-decoration: none;
}

/* ============================================
   Responsive Adjustments
   ============================================ */

/* QUICK WIN #1: Mobile navigation stacking (GOV.UK official pattern) */
@media (max-width: 640px) {
    .govuk-service-navigation__container {
        flex-direction: column !important;
        align-items: flex-start !important;
        gap: 0 !important;
    }

    .govuk-service-navigation__wrapper {
        width: 100%;
    }

    .govuk-service-navigation__list {
        flex-direction: column;
        align-items: flex-start;
        width: 100%;
        gap: 0;
    }

    .govuk-service-navigation__item {
        width: 100%;
    }

    .govuk-service-navigation__item:not(:last-child) {
        margin-right: 0;
        margin-bottom: 0;
    }

    .govuk-service-navigation__link {
        padding: 10px 0;
        line-height: 1.31579; /* Mobile: 25/19 exact */
        border-bottom: 0;
        border-left: 5px solid transparent;
        padding-left: 15px;
        margin-left: -15px;
        width: 100%;
    }

    .govuk-service-navigation__link:hover {
        border-bottom-color: transparent;
        border-left-color: var(--color-gray-600, #505a5f);
    }

    .govuk-service-navigation__item--active .govuk-service-navigation__link,
    .govuk-service-navigation__link[aria-current="page"] {
        border-bottom-color: transparent;
        border-left-color: #144e81;
        border-left-width: 5px;
    }

    .govuk-service-navigation__service-name .govuk-service-navigation__link {
        padding: 10px 0;
        line-height: 1.31579;
        border-left: 0;
        padding-left: 0;
        margin-left: 0;
    }
}

/* Tablet - single column grid */
@media (max-width: 768px) {
    .govuk-service-navigation__dropdown {
        min-width: 300px;
        max-width: 360px;
        right: -8px;
    }

    .civicone-nav-dropdown-grid {
        grid-template-columns: 1fr;
        gap: var(--space-4, 16px);
    }
}

/* Small mobile - compact spacing */
@media (max-width: 480px) {
    .govuk-service-navigation__dropdown {
        min-width: calc(100vw - 32px);
        max-width: calc(100vw - 32px);
        right: 16px;
        left: 16px;
        padding: var(--space-3, 12px);
    }

    .civicone-nav-dropdown-grid {
        gap: var(--space-3, 12px);
    }

    .civicone-nav-dropdown-heading {
        font-size: 0.875rem;
    }

    .govuk-service-navigation__dropdown-link {
        font-size: 0.875rem;
    }
}

/* ============================================
   Accessibility Enhancements
   ============================================ */

/* Focus visible styles for keyboard navigation */
.govuk-service-navigation__dropdown-link:focus-visible {
    outline: 3px solid var(--color-focus, #ffdd00);
    outline-offset: 0;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    .civicone-nav-dropdown-heading {
        border-bottom-width: 3px;
        border-bottom-color: currentColor;
    }

    .govuk-service-navigation__dropdown {
        border-width: 2px;
    }

    .govuk-service-navigation__dropdown-link[aria-current="page"] {
        outline: 2px solid currentColor;
        outline-offset: -2px;
    }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
    .govuk-service-navigation__link {
        transition: none;
    }
}

/* ============================================
   Print Styles
   ============================================ */

@media print {
    .govuk-service-navigation__dropdown {
        display: none !important;
    }
}
