{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "$": "readonly",
    "jQuery": "readonly",
    "AdminToast": "readonly",
    "AOS": "readonly",
    "Box2D": "readonly",
    "b2Body": "readonly",
    "b2BodyDef": "readonly",
    "b2DebugDraw": "readonly",
    "b2FixtureDef": "readonly",
    "b2MouseJointDef": "readonly",
    "b2PolygonShape": "readonly",
    "b2Vec2": "readonly",
    "b2World": "readonly",
    "Capacitor": "readonly",
    "CivicOneMobile": "writable",
    "CivicOneNative": "writable",
    "CivicOnePWA": "writable",
    "CivicOneWebAuthn": "writable",
    "closeMobileCommentSheet": "readonly",
    "closeMobileMenu": "readonly",
    "closeMobileNotifications": "readonly",
    "closeOverlay": "readonly",
    "ComposeForm": "writable",
    "FeedFilter": "writable",
    "gtag": "readonly",
    "loadMobileComments": "readonly",
    "MapboxGeocoder": "readonly",
    "mapboxgl": "readonly",
    "module": "readonly",
    "NEXUS_BASE": "readonly",
    "NexusAppUpdater": "writable",
    "NexusAuth": "writable",
    "NexusMobile": "writable",
    "NexusNative": "writable",
    "NexusPWA": "writable",
    "NexusTurbo": "writable",
    "openMobileCommentSheet": "readonly",
    "PublicKeyCredential": "readonly",
    "Pusher": "readonly",
    "showConfetti": "readonly",
    "showToast": "readonly",
    "SocialInteractions": "writable",
    "tinymce": "readonly",
    "Toast": "readonly",
    "updateBottomNavBadges": "readonly",
    "updateCommentCount": "readonly"
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-inline-styles": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "prefer-const": "warn",
    "no-var": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.js"],
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "CallExpression[callee.object.name='style'][callee.property.name='display']",
            "message": "Avoid using element.style.display. Use CSS classes with classList instead (per CLAUDE.md)."
          },
          {
            "selector": "AssignmentExpression[left.object.property.name='style'][left.property.name='display']",
            "message": "Avoid using element.style.display = 'value'. Use CSS classes with classList instead (per CLAUDE.md)."
          },
          {
            "selector": "MemberExpression[object.property.name='style'][property.name=/^(padding|margin|color|background|width|height|fontSize|fontWeight)$/]",
            "message": "Avoid manipulating inline styles directly. Use CSS classes with classList instead (per CLAUDE.md)."
          }
        ]
      }
    }
  ],
  "ignorePatterns": [
    "**/*.min.js",
    "**/node_modules/**",
    "**/vendor/**",
    "**/_archived/**",
    "**/govuk-frontend-ref/**",
    "**/civicone-ai-index.js",
    "**/civicone-auth-register.js",
    "**/civicone-consent-required.js",
    "**/civicone-feed-show.js",
    "**/civicone-organizations-wallet.js",
    "**/civicone-resources-form.js",
    "**/civicone-volunteering-edit-org.js",
    "**/jGravity.js"
  ]
}
