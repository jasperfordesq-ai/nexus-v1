{
  "scripts": {
    "build:css": "node scripts/build-css.js && node scripts/validate-design-tokens.js",
    "build:css:core": "node scripts/build-core-css.js",
    "build:css:purge": "node scripts/run-purgecss.js",
    "build:images": "node scripts/optimize-images.js",
    "css:discover": "node scripts/discover-css.js",
    "css:auto-config": "node scripts/auto-discover-css.js",
    "css:audit": "node scripts/css-dependency-audit.js",
    "css:audit:verbose": "node scripts/css-dependency-audit.js --verbose",
    "minify:css": "node scripts/minify-css.js && node scripts/validate-design-tokens.js",
    "minify:js": "node scripts/minify-js.js",
    "minify:php": "php scripts/minify.php",
    "lint:css": "stylelint \"httpdocs/assets/css/**/*.css\" --ignore-pattern \"**/*.min.css\" --ignore-pattern \"**/_archived/**\"",
    "lint:css:fix": "stylelint \"httpdocs/assets/css/**/*.css\" --ignore-pattern \"**/*.min.css\" --ignore-pattern \"**/_archived/**\" --fix",
    "lint:css:colors": "node scripts/lint-modern-colors.js",
    "lint:css:colors:baseline": "node scripts/lint-modern-colors.js --baseline",
    "lint:css:colors:report": "node scripts/lint-modern-colors.js --json",
    "lint:js": "eslint \"httpdocs/assets/js/**/*.js\" --ignore-pattern \"**/*.min.js\"",
    "lint:js:fix": "eslint \"httpdocs/assets/js/**/*.js\" --ignore-pattern \"**/*.min.js\" --fix",
    "lint:php:styles": "php scripts/lint-inline-styles.php",
    "lint": "npm run lint:css && npm run lint:css:colors && npm run lint:js && npm run lint:php:styles",
    "consolidate:css": "node scripts/consolidate-css.js",
    "validate:design-tokens": "node scripts/validate-design-tokens.js",
    "validate:css": "node scripts/validate-design-tokens.js && node scripts/css-dependency-audit.js",
    "predeploy": "npm run validate:design-tokens",
    "deploy:preview": "bash scripts/claude-deploy.sh --last-commit --dry-run",
    "deploy": "npm run predeploy && bash scripts/claude-deploy.sh --last-commit --verify",
    "deploy:changed": "npm run predeploy && bash scripts/claude-deploy.sh --changed --verify",
    "deploy:full": "npm run predeploy && bash scripts/claude-deploy.sh --folders",
    "build": "npm run minify:css && npm run minify:js && npm run build:css:core && npm run build:images"
  },
  "devDependencies": {
    "cssnano": "^7.1.2",
    "eslint": "^8.57.0",
    "pa11y": "^9.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "purgecss": "^7.0.2",
    "sharp": "^0.34.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^36.0.1",
    "terser": "^5.44.1"
  },
  "dependencies": {
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0"
  }
}
