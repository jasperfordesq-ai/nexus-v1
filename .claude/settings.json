{
  "defaultMode": "acceptEdits",
  "permissions": {
    "allow": ["Read","Edit","Write","Bash(rg:*)","Bash(git diff:*)","Bash(git status:*)","Bash(php:*)","Bash(node:*)","Bash(npm:*)","Bash(ls:*)","Bash(find:*)"],
    "ask": ["Bash(git push:*)","Bash(rm:*)","Bash(sudo:*)"],
    "deny": ["Read(./.env)","Read(./secrets/**)","Bash(rm -rf:*)"]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/polish-stop.sh"
          }
        ]
      }
    ]
  }
}
